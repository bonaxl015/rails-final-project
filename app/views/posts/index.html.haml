.news-feed-body
  .container
    .row
      -# All Posts
      .col-8
        .post-form
          = render "post_form"
        - if @posts.empty?
          .post-card
            .post-text
              .no-post-text No posts to show
        - else
          #post-display
            - @posts.each_with_index do |post, index|
              = render partial: "all_posts/display", locals: { post: post, index: index + 1 }

      -# Sidebar
      .col-4
        -# Events Display
        .event-items
          .event-padding
            = link_to "See All", events_path(tab: "all_events"), class: "float-end"
            .event-title Events
            = render "layouts/side_bar_events"
        -# Latest News Display
        .news-items.news-padding
          .d-flex.justify-content-between
            .news-header Latest News
            = link_to "See All", space_news_index_path
          #news-content