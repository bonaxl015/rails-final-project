.follow-button-container
  - if current_user.following?(user)
    = link_to "Unfollow", relationship_path(id: current_user.id, user_id: user.id), remote: true, method: :delete, class: "btn btn-maroon"
  - else
    = link_to "Follow", relationships_path(id: current_user.id, user_id: user.id), remote: true, method: :post, class: "btn btn-light btn-outline"