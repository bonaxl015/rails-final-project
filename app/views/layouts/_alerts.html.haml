- if notice
  %p.notice.alert.alert-info.alert-dismissible.fade.show.mt-2.mb-0
    = notice
    %button.btn-close(type="button" data-bs-dismiss="alert" aria-label="Close")
- elsif alert
  %p.alert.alert-warning.alert-dismissible.fade.show.mt-2.mb-0
    = alert
    %button.btn-close(type="button" data-bs-dismiss="alert" aria-label="Close")
