%h1= @user.username
%h2= @user.full_name
%p= link_to "#{@user.followed_users.count} Following | #{@user.follower_users.count} #{@user.follower_users.count <= 1 ? 'Follower' : 'Followers'}", relations_path(@user)
- if @user == current_user
  = link_to "My Events", events_path
- unless @user == current_user
  - if current_user.following?(@user)
    = button_to "Unfollow", relationship_path(user_id: @user.id), method: :delete
  - else
    = button_to "Follow", relationships_path(user_id: @user.id), method: :post

- @user_posts.each do |post|
  %h5= post.user.username
  %p= post.caption
  - if post.image.present?
    %p display image